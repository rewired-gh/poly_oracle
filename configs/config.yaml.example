# Polyoracle Configuration
# Copy to config.yaml and set your Telegram credentials
#
# SENSITIVITY PROFILES (choose one based on your monitoring needs):
#
# 1. SENSITIVE - Best for pro investors monitoring 8+ hrs/day
#    - Catches every important signal (lower false negative rate)
#    - Higher notification volume (expect 10-15 per cycle)
#    - Recommended poll_interval: 2-5m
#    Config: window_size=2, alpha=0.15, threshold=2.0, top_k=15
#            volume_24hr_min=10000, volume_1wk_min=50000, volume_1mo_min=200000
#            cooldown_multiplier=3
#
# 2. MODERATE (DEFAULT) - Best for regular users wanting timely updates
#    - Balances signal quality and quantity
#    - Moderate notification frequency (expect 5-10 per cycle)
#    - Recommended poll_interval: 5-15m
#    Config: window_size=4, alpha=0.1, threshold=3.0, top_k=10
#            volume_24hr_min=25000, volume_1wk_min=100000, volume_1mo_min=500000
#            cooldown_multiplier=5
#
# 3. STRICT - Best for noise-intolerant users seeking competitive edge
#    - Only highly valuable, high-confidence signals
#    - Minimal notifications (expect 0-5 per cycle)
#    - Recommended poll_interval: 15-30m
#    Config: window_size=5, alpha=0.08, threshold=4.5, top_k=5
#            volume_24hr_min=50000, volume_1wk_min=250000, volume_1mo_min=1000000
#            cooldown_multiplier=7

polymarket:
  poll_interval: 5m
  limit: 5000
  categories:
    - geopolitics
    - tech
    - finance
    - world

monitor:
  # Detection algorithm parameters
  window_size: 4              # Trajectory consistency window (SENSITIVE:2, MODERATE:4, STRICT:5)
  alpha: 0.1                  # Depth tracking responsiveness (SENSITIVE:0.15, MODERATE:0.1, STRICT:0.08)
  ceiling: 10.0               # Max score cap for outlier protection
  threshold: 3.0              # Alert trigger threshold (SENSITIVE:2.0, MODERATE:3.0, STRICT:4.5)

  # Volume filters (OR logic - pass if ANY threshold met)
  volume_24hr_min: 25000      # $25K minimum 24hr volume (SENSITIVE:10000, MODERATE:25000, STRICT:50000)
  volume_1wk_min: 100000      # $100K minimum 1wk volume (SENSITIVE:50000, MODERATE:100000, STRICT:250000)
  volume_1mo_min: 500000      # $500K minimum 1mo volume (SENSITIVE:200000, MODERATE:500000, STRICT:1000000)

  # Notification settings
  top_k: 10                   # Max alerts per cycle (SENSITIVE:15, MODERATE:10, STRICT:5)
  cooldown_multiplier: 5      # Cooldown = multiplier Ã— poll_interval (SENSITIVE:3, MODERATE:5, STRICT:7)
  checkpoint_interval: 12     # Persist state every N cycles

telegram:
  bot_token: "YOUR_BOT_TOKEN"
  chat_id: "YOUR_CHAT_ID"
  enabled: true

storage:
  max_events: 10000

logging:
  level: info
